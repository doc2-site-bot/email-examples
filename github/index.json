{
    "select": {
        "body": {
            "style": {
                "backgroundColor": "#ffffff",
                "color": "#24292e",
                "fontFamily":"-apple-system,BlinkMacSystemFont,\"Segoe UI\",Helvetica,Arial,sans-serif,\"Apple Color Emoji\",\"Segoe UI Emoji\""
            }
        },
        "main": {
            "style": {
                "width": "480px",
                "margin": "0 auto",
                "padding": "20px 0 48px"
            }
        },
        "img": {
            "width": "32",
            "height": "32"
        },
        "img + p": {
            "style": {
                "fontSize": "24px",
                "lineHeight": 1.25
            }
        },
        "column": {
            "style": {
                "padding": "24px",
                "border": "solid 1px #dedede",
                "borderRadius": "25px",
                "textAlign": "center"
            }
        },
        "column > p:last-of-type a": {
            "isButton": true,
            "style": {
                "fontSize": "14px",
                "backgroundColor": "#28a745",
                "color": "#fff",
                "lineHeight": 1.5,
                "borderRadius": "0.5em",
                "padding": "0.75em 1.5em"
            }
        },
        "column + p": {
            "style": {
                "textAlign": "center"
            }
        },
        "main > p:last-of-type": {
            "style": {
                "color": "#6a737d",
                "fontSize": "12px",
                "textAlign": "center",
                "marginTop": "60px"
            }
        }
    },
    "selectAll": {
        "column + p a": {
            "style": {
                "color": "#0366d6",
                "fontSize": "12px"
            }
        }
    }
}